<div class="flex flex-col">
  <div class="flex justify-between items-center">
    <%= stylesheet_link_tag "corporation.css" %>
    <%= link_to "Retour", corporation_path(@corporation, selected_year: session[:selected_year]), data: { turbo: false }, class: "bg-blue-500 text-white font-bold py-2 px-4 rounded mb-4" %>
    <%= link_to "Modifier", edit_corporation_adherent_formulaire_path(@corporation, @adherent, @formulaire), data: { turbo: false }, class: "bg-blue-500 text-white font-bold py-2 px-4 rounded mb-4 place-self-start" %>
  </div>

  <meta name="viewport" content="width=device-width,initial-scale=1" charset = "utf-8">


  <% corporation_id = params[:corporation_id] %>


  <% if corporation_id == '1' %>
    <%= render partial: 'formulaires_edition_show/peintres' %>
  <% elsif corporation_id == '2'%>
    <%= render partial: 'formulaires_edition_show/boulangers' %>
  <% elsif corporation_id == '3'%>
    <%= render partial: 'formulaires_edition_show/coiffeurs' %>
  <% elsif corporation_id == '4'%>
    <%= render partial: 'formulaires_edition_show/menuisiers' %>
  <% elsif corporation_id == '5'%>
    <%= render partial: 'formulaires_edition_show/copama' %>
  <% elsif corporation_id == '6'%>
    <%= render partial: 'formulaires_edition_show/estheticiennes' %>
  <% else %>
    <% redirect_to root_path %>
  <% end %>
</div>

