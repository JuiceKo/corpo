<%= stylesheet_link_tag "corporation" %>
<div class="container mx-auto px-4">


  <h1 class="text-3xl font-bold mb-6">Corporations</h1>

  <% @corporations.each do |corpo| %>
    <div class="border border-gray-200 rounded-lg mb-6">
      <% latest_donnee = @latest_donnees[corpo.id] %>
      <% if latest_donnee %>
        <h2 class="text-xl font-semibold bg-gray-100 px-4 py-2 rounded-t-lg"><%= latest_donnee.nom_formulaire.upcase %></h2>
      <% end %>

      <div class="p-6">
        <p class="text-gray-600 mb-2">Nombre d'adhérents : <%= corpo.adherents.count %></p>
        <div class="flex justify-between items-center">
          <%= link_to "Modifier le nom", edit_corporation_path(corpo), class: "text-gray-700 hover:text-gray-900" %>
          <%= link_to "Voir les adhérents", corporation_path(corpo), data: { turbo: false }, class: "text-blue-500 font-semibold hover:underline" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
