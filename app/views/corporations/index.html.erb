<%= stylesheet_link_tag "corporation" %>
<div class="container mx-auto px-4">
  <h1 class="text-3xl font-bold mb-6">Corporations</h1>

  <% @corporations.each do |corpo| %>
    <div id="modifier-fields-<%= corpo.id %>">
      <div class="bg-white shadow-md rounded-lg p-6 mb-6">
        <% latest_donnee = @latest_donnees[corpo.id] %>
        <% if latest_donnee %>
          <h2 class="text-xl font-semibold mb-2"><%= latest_donnee.nom_formulaire.upcase %></h2>
        <% end %>

        <%= link_to "Modifier le nom", edit_corporation_path(corpo), class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>

        <p class="text-gray-600 mt-4">Nombre d'adhérents : <%= corpo.adherents.count %></p>

        <%= link_to "Voir les adhérents", corporation_path(corpo), data: { turbo: false }, class: "text-blue-500 font-semibold hover:underline" %>
      </div>
    </div>
  <% end %>
</div>
